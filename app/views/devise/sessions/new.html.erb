<div class="auth-bg">
  <div class="container">
    <div class="row min-vh-100 align-items-center justify-content-center">
      <div class="col-12 col-md-8 col-lg-5">
        <!-- Flash de erros/sucesso do Devise -->
        <% if notice.present? || alert.present? %>
          <div class="mb-3">
            <% if notice.present? %>
              <div class="alert alert-success rounded-3"><%= notice %></div>
            <% end %>
            <% if alert.present? %>
              <div class="alert alert-danger rounded-3"><%= alert %></div>
            <% end %>
          </div>
        <% end %>

        <div class="auth-card shadow-lg">
          <!-- Branding -->
          <div class="text-center mb-4">
            <h1 class="h4 mb-1">Bem-vindo de volta</h1>
            <p class="text-muted m-0">Faça login para continuar</p>
          </div>

          <!-- Formulário de login -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          label: "E-mail",
                          required: false,
                          autofocus: true,
                          input_html: {
                            autocomplete: "email",
                            class: "form-control form-control-lg"
                          } %>

              <%= f.input :password,
                          label: "Senha",
                          required: false,
                          input_html: {
                            autocomplete: "current-password",
                            class: "form-control form-control-lg"
                          } %>

              <% if devise_mapping.rememberable? %>
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <div class="form-check m-0">
                    <%= f.input :remember_me,
                                as: :boolean,
                                label: "Lembrar-me",
                                input_html: { class: "form-check-input" },
                                label_html: { class: "form-check-label" } %>
                  </div>
                  <%# Link "Esqueci a senha" discreto %>
                  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Esqueci minha senha",
                        new_password_path(resource_name),
                        class: "small text-decoration-none text-muted" %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="d-grid mt-3">
              <%= f.button :submit, "Entrar", class: "btn btn-primary btn-lg auth-btn" %>
            </div>
          <% end %>

          <!-- Divisor -->
          <div class="auth-divider"><span>ou</span></div>

          <!-- Ações secundárias -->
          <div class="d-grid gap-2">
            <% if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Criar uma conta",
                  new_registration_path(resource_name),
                  class: "btn btn-outline-secondary btn-lg" %>
            <% end %>
          </div>

        <p class="text-center text-light mt-3 small">
          © <%= Time.current.year %> — Resumo Livre
        </p>
      </div>
    </div>
  </div>
</div>
