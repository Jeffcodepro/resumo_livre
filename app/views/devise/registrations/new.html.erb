<div class="auth-light">
  <div class="container">
    <div class="row min-vh-100 align-items-center justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-5">

        <div class="card auth-card-light border-0 shadow-sm rounded-4 p-4 p-md-5">
          <div class="text-center mb-4">
            <h1 class="h4 mb-1 fw-semibold">Criar conta</h1>
            <p class="text-secondary m-0">Leva menos de 1 minuto</p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.input :full_name,
                          label: "Nome completo",
                          required: true,
                          input_html: { class: "form-control form-control-lg soft-input", autocomplete: "name" } %>
            </div>

            <div class="mb-3">
              <%= f.input :trade_name,
                          label: "Nome fantasia",
                          required: false,
                          input_html: { class: "form-control form-control-lg soft-input", autocomplete: "organization" } %>
            </div>

            <div class="mb-3">
              <%= f.input :cnpj,
                          label: "CNPJ",
                          required: false,
                          hint: content_tag(:span, "Apenas números", class: "text-secondary small"),
                          input_html: { class: "form-control form-control-lg soft-input", inputmode: "numeric", placeholder: "00.000.000/0000-00" } %>
            </div>

            <div class="mb-3">
              <%= f.input :whatsapp,
                          label: "Whatsapp",
                          required: false,
                          hint: content_tag(:span, "DDD + número (apenas números)", class: "text-secondary small"),
                          input_html: { class: "form-control form-control-lg soft-input", autocomplete: "tel" } %>
            </div>

            <div class="mb-3">
              <%= f.input :email,
                          label: "E-mail",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control form-control-lg soft-input" } %>
            </div>

            <div class="mb-3">
              <%= f.input :password,
                          label: "Senha",
                          required: true,
                          hint: (content_tag(:span, "#{@minimum_password_length} caracteres no mínimo", class: "text-secondary small") if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "form-control form-control-lg soft-input" } %>
            </div>

            <div class="mb-2">
              <%= f.input :password_confirmation,
                          label: "Confirme a senha",
                          required: true,
                          input_html: { autocomplete: "new-password", class: "form-control form-control-lg soft-input" } %>
            </div>

            <div class="d-grid mt-2">
              <%= f.button :submit, "Criar conta", class: "btn btn-primary btn-lg rounded-pill fw-semibold" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <span class="text-secondary small">Já tem conta?</span>
            <%= link_to " Entrar", new_session_path(resource_name), class: "small fw-semibold text-decoration-none ms-1 link-primary-soft" %>
          </div>
        </div>

        <p class="text-center text-light mt-3 small">© <%= Time.current.year %> — Resumo Livre</p>
      </div>
    </div>
  </div>
</div>
