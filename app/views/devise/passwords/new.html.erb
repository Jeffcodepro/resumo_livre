<div class="auth-bg">
  <div class="container">
    <div class="row min-vh-100 align-items-center justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">

        <% if notice.present? || alert.present? %>
          <div class="mb-3">
            <% if notice.present? %>
              <div class="alert alert-success"><%= notice %></div>
            <% end %>
            <% if alert.present? %>
              <div class="alert alert-danger"><%= alert %></div>
            <% end %>
          </div>
        <% end %>

        <div class="auth-card shadow-lg">
          <div class="text-center mb-4">
            <h1 class="h4 mb-1">Redefinir senha</h1>
            <p class="text-muted m-0">Informe seu e-mail para receber as instruções</p>
          </div>

          <% if resource.errors.any? %>
            <div class="alert alert-danger mb-4">
              <ul class="m-0 ps-3">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="mb-3">
              <%= f.input :email,
                          label: "E-mail",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control form-control-lg" } %>
            </div>

            <div class="d-grid">
              <%= f.button :submit, "Enviar instruções", class: "btn btn-primary btn-lg auth-btn fw-semibold rounded-pill" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to "Voltar ao login", new_session_path(resource_name), class: "small text-decoration-none link-muted me-2" %>
            <% if devise_mapping.registerable? %>
              <span class="text-muted small">•</span>
              <%= link_to " Criar conta", new_registration_path(resource_name), class: "small fw-semibold text-decoration-none ms-2 link-primary-soft" %>
            <% end %>
          </div>
        </div>

        <p class="text-center text-light mt-3 small">© <%= Time.current.year %> — Resumo Livre</p>
      </div>
    </div>
  </div>
</div>
